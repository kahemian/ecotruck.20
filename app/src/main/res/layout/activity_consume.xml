<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFC"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ConsumeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="292dp"
        app:srcCompat="@drawable/image_removebg_preview__1_" />

    <Button
        android:id="@+id/buttonConsumeWater"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:backgroundTint="#03A9F4"
        android:text="Agua"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/baseline_water_drop_24"
        app:iconSize="55dp" />

    <Button
        android:id="@+id/buttonConsumeElectricity"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:backgroundTint="#DECF47"
        android:text="ElÃ©ctricidad"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/baseline_electric_bolt_24"
        app:iconSize="55dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="false"
            android:background="#407842"
            app:itemIconSize="55dp"
            app:itemIconTint="@color/white"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>

</LinearLayout>